# Programs
include $HOME/.config/i3/programs

bindsym $mod+r exec --no-startup-id "rofi -modi drun,run -show drun"
#bindsym Alt+Tab exec --no-startup-id "rofi -combi-modi window -show combi -modi combi -show-icons"
bindsym Mod1+Tab exec --no-startup-id "rofi -show"

# kill focused window
bindsym $mod+x kill

# "Reload" polybar
bindsym $mod+Control+p exec --no-startup-id `bash $HOME/.config/i3/restart_polybar.sh`
# "Realod" picom
bindsym $mod+Control+O exec --no-startup-id `bash $HOME/.config/i3/restart_picom.sh`


# Xrandr
exec --no-startup-id `xrandr --newmode "640x528_120.00"   57.75  640 680 744 848  528 531 541 569 -hsync +vsync`
exec --no-startup-id `xrandr --addmode DVI-I-1-0 "640x528_120.00"`
exec --no-startup-id `xrandr --output DVI-I-1-0 --gamma 1.4:1.4:1.4`
exec --no-startup-id `xrandr --newmode "1152x864_70.00"   96.75  1152 1224 1344 1536  864 867 871 902 -hsync +vsync`
exec --no-startup-id `xrandr --addmode DVI-I-1-0 "1152x864_70.00"`



